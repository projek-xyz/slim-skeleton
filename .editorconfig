# editorconfig.org
root = true

[*]
end_of_line = lf
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

[{assets,public,tests}/**.{css,scss}]
indent_size = 2

[{app,assets,public,tests}/**.{js,php}]
indent_size = 4

[*.{json,xml,yml}]
insert_final_newline = false
indent_size = 2
