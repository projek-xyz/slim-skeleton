{
  "serve": {
    "port": 8088,
    "host": "localhost",
    "proxy": "localhost:8000",
    "open": false
  },
  "paths": {
    "src"  : "assets/",
    "dest" : "public/assets/"
  },
  "patterns": {
    "server"  : "app/**/*.php",
    "assets"  : "{styles,scripts,images,fonts}/**/*",
    "fonts"   : "fonts/*.{eot,svg,ttf,woff,woff2}",
    "styles"  : "styles/**/*.scss",
    "scripts" : "scripts/**/*.js",
    "images"  : "images/**/*.{png,jpg,gif,svg}"
  },
  "sass": {
    "outputStyle"  : "compact"
  },
  "autoprefixer": {
    "browser" : ["> 1%", "last 10 versions", "Firefox ESR", "Opera 12.1"]
  },
  "uglify": {
    "compress": {},
    "preserveComments": "license"
  },
  "imagemin": {
    "progressive": true
  },
  "eslint": {
    "configFile": "tests/.eslint.yml"
  },
  "sasslint": {
    "configFile": "tests/.scsslint.yml"
  },
  "modernizr": {
    "filename": "modernizr.js",
    "settings": {
      "options": [
        "addTest",
        "atRule",
        "domPrefixes",
        "hasEvent",
        "html5shiv",
        "html5printshiv",
        "load",
        "mq",
        "prefixed",
        "prefixes",
        "prefixedCSS",
        "setClasses",
        "testAllProps",
        "testProp",
        "testStyles"
      ],
      "feature-detects": []
    }
  }
}
